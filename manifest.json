{
  "manifest_version": 2,

  "name": "GitHub Utilities",
  "description": "Chrome extension which adds Sublime's most used shortcuts to GitHub commits and pull requests.",
  "version": "0.1",
  "version_name": "young gun",

  "background": {
    "scripts": [
      // External libraries
      "bower_components/jsface/jsface.js",

      // Internal libraries
      "libs/rpc/request.js",
      "libs/rpc/response.js",
      "libs/rpc/connection.js",
      "libs/rpc/drivers/abstract-driver.js",
      "libs/rpc/drivers/extension-background-driver.js",
      "libs/rpc/protocols/abstract-protocol.js",
      "libs/rpc/protocols/object-protocol.js",

      // Extension code
      "shared/constants.js",
      "background/app/activation.js",
      "background/app/commands-handling.js"
    ],
    "persistent": false
  },

  "page_action": {
    "default_icon": "background/assets/icon.png",
    "default_title": "GitHub Utilities is active"
  },

  "commands": {

    "goto-line": {
      "suggested_key": {
        "default": "Ctrl+G",
        "mac": "MacCtrl+G"
      },
      "description": "Goto Line..."
    }

  },

  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "css": [
        "content/css/popup.css"
      ],
      "js": [
        // External libraries
        "bower_components/jsface/jsface.js",

        // Internal libraries
        "libs/rpc/request.js",
        "libs/rpc/response.js",
        "libs/rpc/connection.js",
        "libs/rpc/drivers/abstract-driver.js",
        "libs/rpc/drivers/extension-content-driver.js",
        "libs/rpc/protocols/abstract-protocol.js",
        "libs/rpc/protocols/object-protocol.js",

        // Extension code
        "shared/constants.js",

        "content/app/events/event.js",
        "content/app/events/event-dispatcher.js",

        "content/app/ui/popups/goto-line-popup.js",
        "content/app/ui/popup-manager.js",

        "content/app/commands/goto-line-command.js",
        "content/app/commands/command-manager.js",

        "content/app/main.js"
      ]
    }
  ],

  "permissions": [
    "declarativeContent",
    "activeTab",
    "tabs"
  ]
}
